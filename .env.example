# Application
NODE_ENV=development
PORT=8000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/webupload

# Redis
REDIS_URL=redis://localhost:6379

# S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=webupload
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Authentication
JWT_SECRET=change_this_in_production_to_a_long_random_string
REFRESH_TOKEN_SECRET=change_this_in_production_to_a_different_long_random_string
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_SALT_ROUNDS=10

# Security
CORS_ORIGIN=http://localhost:3000
REQUIRE_EMAIL_VERIFICATION=false
ENABLE_2FA=false

# File Upload
FILE_UPLOAD_MAX_SIZE=104857600  # 100MB in bytes
THUMBNAIL_MAX_WIDTH=300
THUMBNAIL_MAX_HEIGHT=300
PRESIGNED_URL_EXPIRY=900  # 15 minutes in seconds
ENABLE_FILE_DEDUPLICATION=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX=100  # 100 requests per minute
AUTH_RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
AUTH_RATE_LIMIT_MAX=10  # 10 auth requests per minute

# Antivirus
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Frontend
VITE_API_URL=http://localhost:8000
